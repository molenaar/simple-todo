{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against Astro",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}/app/src"
    },
    {
      "name": "Launch Azure Functions API",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/api/function_app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/api",
      "preLaunchTask": "Service: Install Python Dependencies"
    }
  ]
}